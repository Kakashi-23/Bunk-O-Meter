<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.AddTimeTable"
    android:background="@drawable/whiteborder">
    <TextView
        android:id="@+id/timeTName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/timeTDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/delete"
        />
    <RelativeLayout
        android:id="@+id/timeTProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whiteborder"
        >
        <ProgressBar
            android:id="@+id/timeTProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/timeTNoFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_file_added"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
